<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogTripActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="@string/logTripSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitLogTrip"
            android:onClick="onClickSubmitLogTrip"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/switchPublicTrip"
            android:layout_marginEnd="17dp" android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:hint="Name of the trip?"
            android:text=""
            android:ems="10"
            android:id="@+id/logTripName"
            android:layout_marginTop="16dp" android:layout_marginBottom="23dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/logTripDescription" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:hint="Description of the trip?"
            android:text=""
            android:ems="10"
            android:id="@+id/logTripDescription" app:layout_constraintTop_toBottomOf="@+id/logTripName"
            android:layout_marginBottom="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/switchPublicTrip" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
    />
    <Switch
            android:text="Public trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchPublicTrip"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/logTripDescription"
            android:layout_marginBottom="240dp" app:layout_constraintBottom_toTopOf="@+id/submitLogTrip"/>
</android.support.constraint.ConstraintLayout>